<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/feed_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"


        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="vertical"

        android:paddingTop="3dp" >

        <LinearLayout
            android:paddingLeft="4dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >

            <com.pkmmte.view.CircularImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/list_ic"
                android:id="@+id/userCommentImage"
                app:border="true"

                app:border_width="0dp"
                app:shadow="true"  />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/userCommentImage"
                android:layout_toEndOf="@id/userCommentImage"
                android:paddingLeft="@dimen/feed_item_profile_info_padd" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userCommentName"
                        android:text="Title"

                        android:layout_alignParentTop="true"


                        android:textSize="16sp"
                        android:textColor="@android:color/holo_blue_light"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/commentDate"
                        android:text="Date"
                       android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="3dp"
                        android:textColor="#173966"
                        android:textSize="8sp"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:text="Test, Test, Test, Test, Test, Test, Test,
Test, Test, Test, Test, Test, Test, Test"

                    android:layout_toRightOf="@id/userCommentImage"
                    android:layout_toEndOf="@id/userCommentImage"
                    android:paddingLeft="6dp"

                    android:padding="3dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/commentBody"/>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>