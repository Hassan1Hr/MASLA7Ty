<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AuthBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context="activities.LoginActivity" >
    >
    <ImageView
        android:id="@+id/backgroundImage"
        style="@style/AuthBackgroundImage"
        android:alpha=".6"

        android:contentDescription="@string/content_desc_background" />
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/AuthTitle1">
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#F7BE13"
            android:text="M" />
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#C1F765"
            android:text="A"
             />
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#26FCC6"
            android:text="S" />
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#E699F9"
            android:text="L"
            />
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#1FEE18"
            android:text="7" />
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#C4F72A"
            android:text="T"
            />
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#02FE28"
            android:text="y"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editTextLayout"
        style="@style/AuthFieldContainer" >
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/usernameET"
                style="@style/AuthEditText"
                android:hint="@string/username_hint_string">
          <requestFocus />
         </EditText>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            style="@style/AuthEditText"
            android:id="@+id/passowrdET"
            android:hint="@string/passowrd_hint_string"
            android:inputType="textPassword"
            />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        style="@style/AuthButton"
        android:id="@+id/signingBtn"
        android:text="@string/signing_btn_string"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextLayout"
        android:textSize="22dp"
        />
    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signingBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textSize="18dp"
        android:textStyle="normal|bold|italic"
        android:text="@string/sign_up_text"
        android:textColor="#50c" />
    <TextView
        android:id="@+id/signUpEnterprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUpText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:textSize="20dp"
        android:textStyle="normal|bold|italic"
        android:fontFamily="sans-serif-thin"
        android:text="@string/sign_up_Enterprise"
        android:textColor="#80c" />

</RelativeLayout>
