<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tab_bg"
    android:clickable="true"
    android:padding="5dp"
    android:orientation="horizontal">


    <com.pkmmte.view.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/list_ic"
        android:id="@+id/friendImage"
        app:border="true"
        android:layout_centerVertical="true"
        app:border_width="0dp"
        app:shadow="true"  />

    <TextView
        android:id="@+id/friendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/friendImage"
        android:layout_toEndOf="@+id/friendImage"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"

        android:layout_gravity="center_vertical"

        android:text="Dummy Text"
        android:textColor="@color/colorSecondaryText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addFriend"
        android:text="add Friend"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="#00ccff"
        android:background="@drawable/btn_bg"
        android:color="@color/white"
        android:alpha="0.25"/>

</RelativeLayout><!-- From: file:/C:/Users/Hassan/Documents/GitHub/MASLA7Ty/app/src/main/res/layout/user_friends.xml -->