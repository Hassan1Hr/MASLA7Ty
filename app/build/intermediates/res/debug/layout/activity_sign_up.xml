<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AuthBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:scrollbars="vertical"
    android:stackFromBottom="true"
    android:transcriptMode="alwaysScroll"
    >

    <ImageView
        android:id="@+id/backgroundImage"
        style="@style/AuthBackgroundImage"
        android:alpha=".6"
        android:contentDescription="@string/content_desc_background" />

    <LinearLayout
        android:id="@+id/title"
        android:scrollbars="vertical"
        android:transcriptMode="alwaysScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/AuthTitle1">
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#F7BE13"
            android:text="M" />
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#C1F765"
            android:text="A"
            />
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#26FCC6"
            android:text="S" />
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#E699F9"
            android:text="L"
            />
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#1FEE18"
            android:text="7" />
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#C4F72A"
            android:text="T"
            />
        <TextView

            style="@style/Masla7tytitle"
            android:textColor="#02FE28"
            android:text="y"
            />
    </LinearLayout>






    <LinearLayout
        android:id="@+id/editTextLayout"
        style="@style/AuthFieldContainer"
        android:scrollbars="vertical"
        android:transcriptMode="alwaysScroll"
       >


        <EditText
            android:id="@+id/firstName"
            style="@style/AuthEditText"
            android:hint="@string/first_name" >

            <requestFocus />
        </EditText>
        <EditText
            android:id="@+id/lastName"
            style="@style/AuthEditText"
            android:hint="@string/last_name" >


        </EditText>
        <EditText
            android:id="@+id/receiver"
            style="@style/AuthEditText"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/password"
            style="@style/AuthEditText"
            android:hint="@string/passowrd_hint_string"
            android:inputType="textPassword" />



        <EditText
            android:id="@+id/age"
            style="@style/AuthEditText"
            android:hint="age"
            android:inputType="number"
            />
        <EditText
            android:id="@+id/city"
            style="@style/AuthEditText"
            android:hint="city"
            />
        <EditText
            android:id="@+id/mobile"
            style="@style/AuthEditText"
            android:hint="mobile"
            android:inputType="phone"
            />
        <RadioGroup
            android:id="@+id/gender"
            android:orientation="horizontal"
            style="@style/AuthEditText">
            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="male"
                android:onClick="onRadioButtonClicked"
                android:layout_weight=".5"/>
            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="female"
                android:onClick="onRadioButtonClicked"
                android:layout_weight=".5"/>

        </RadioGroup>
    </LinearLayout>

    <ImageView
        android:id="@+id/buttonDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextLayout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/button_divider"
        android:contentDescription="@string/content_desc_button_divider"/>

    <Button
        android:id="@+id/signupButton"
        style="@style/AuthButton"
        android:text="@string/sign_up_button_label"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextLayout"
        android:layout_toLeftOf="@id/buttonDivider"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/cancelButton"
        style="@style/AuthButton"
        android:text="@string/cancel_button_label"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextLayout"
        android:layout_toRightOf="@id/buttonDivider"
        android:layout_marginLeft="0dp" />

</RelativeLayout>







